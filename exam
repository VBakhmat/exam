# main.py
def factorial(n):
    if n < 0:
        raise ValueError("Факторіал не визначений для від'ємних чисел.")
    if n == 0 or n == 1:
        return 1
    result = 1
    for i in range(2, n + 1):
        result *= i
    return result
if __name__ == "__main__":
    n = 5  # приклад для обчислення факторіалу
    print(f"Факторіал числа {n} дорівнює {factorial(n)}")
